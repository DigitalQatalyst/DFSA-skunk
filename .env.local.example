# Default Supabase (existing project)
# These are used by all non-Knowledge Hub pages/components
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Knowledge Hub Supabase (separate project)
# Only KH pages/services/components use these
NEXT_PUBLIC_SUPABASE_URL_KH=
NEXT_PUBLIC_SUPABASE_ANON_KEY_KH=
# Optional Vite-prefixed equivalents (either NEXT_PUBLIC_* or VITE_* works)
VITE_SUPABASE_URL_KH=
VITE_SUPABASE_ANON_KEY_KH=

# Optional: KH Storage bucket overrides
NEXT_PUBLIC_SUPABASE_KH_BUCKET_THUMBNAILS=media-thumbnails
VITE_SUPABASE_KH_BUCKET_THUMBNAILS=media-thumbnails

# Server-only (if you run Edge functions/admin scripts)
# Do not expose service role keys to the browser
SUPABASE_SERVICE_ROLE_KEY_KH=

